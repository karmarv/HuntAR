<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_lighter"
    android:layout_width="wrap_content"
    android:paddingTop="16dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:text="Available treasures"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/treasureRecycler"
        android:layout_width="wrap_content"
        android:layout_below="@id/title"
        android:layout_above="@+id/mapInfoTextview"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="16dp"
        android:id="@+id/mapInfoTextview"
        android:layout_alignParentBottom="true"
        android:text="Click on a treasure icon to start tracking it! Use the buttons if you need help. You can only hunt one a treasure at a time."
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
</RelativeLayout>
